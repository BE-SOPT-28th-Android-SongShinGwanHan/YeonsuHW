<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/reponame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="레포지토리 이름"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repoexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:text="안드로이드 이름설"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/reponame"
        app:layout_constraintStart_toEndOf="@id/reponame"
        app:layout_constraintTop_toTopOf="@id/reponame"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="언어"
        app:layout_constraintBottom_toBottomOf="@id/repoexp"
        app:layout_constraintStart_toEndOf="@id/repoexp"
        app:layout_constraintTop_toTopOf="@id/repoexp"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>